.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
}

.post-author-date{
    margin: 10rpx 0 20rpx 10rpx;
}

.post-author{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
}

.post-date{
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 5rpx;
    font-size: 26rpx;
}

.post-title{
    display: inline-block;
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin: 0 10rpx;
}

.post-image{
    display: inline-block;
    width: 100%;
    height: 340rpx;
    margin: 20rpx 0 10rpx;
}

.post-content{
    color: #666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
    padding: 0 10rpx;
}

.post-like{
    font-size: 13px;
    flex-direction: row;
    line-height: 16rpx;
    margin: 25rpx 0 25rpx 10rpx;
}

.post-like-image{
    width: 16px;
    height: 16px;
    margin-right: 8rpx;
    vertical-align: middle;
}

.post-like-font{
    vertical-align: middle;
    margin-right: 20rpx;
}